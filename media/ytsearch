#!/usr/bin/env bash
# ytsearch â€“ Dual-mode fzf-powered YouTube viewer + ytdlc frontend

set -euo pipefail

readonly CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/youtube-viewer/youtube_users.txt"
readonly YTVIEWER="youtube-viewer"
readonly PLAYER="mpv"
readonly YTDLC="ytdlc"

command -v fzf &>/dev/null || {
	echo "âŒ fzf not found"
	exit 127
}
command -v "$YTVIEWER" &>/dev/null || {
	echo "âŒ youtube-viewer not found"
	exit 127
}
[[ -f "$CONFIG" ]] || {
	echo "âŒ Local channel list not found: $CONFIG"
	exit 1
}

SEARCH_QUERY=""
RESULTS=""

#â”€â”€ Mode 1: Interactive channel select + query â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if [[ $# -eq 0 ]]; then
	SELECTED_LINE=$(fzf --ansi --prompt="ğŸ“º Select a channel: " <"$CONFIG") || exit 1
	CHANNEL_ID=$(cut -d' ' -f1 <<<"$SELECTED_LINE")
	CHANNEL_NAME=$(cut -d' ' -f2- <<<"$SELECTED_LINE")
	read -rp "ğŸ” Enter search query for '$CHANNEL_NAME': " SEARCH_QUERY
	[[ -z "$SEARCH_QUERY" ]] && {
		echo "âŒ Empty search."
		exit 2
	}

	echo -e "\nâ–¶ï¸  Searching in: \033[1;36m$CHANNEL_NAME\033[0m ($CHANNEL_ID)"
	RESULTS=$("$YTVIEWER" --sv --author="$CHANNEL_NAME" "$SEARCH_QUERY" --no-interactive --results=10 | grep -v '^#')
else
	#â”€â”€ Mode 2: Global query across all channels â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
	SEARCH_QUERY="$*"
	echo -e "ğŸŒ Searching all channels for: \033[1;33m$SEARCH_QUERY\033[0m\n"
	while read -r ID NAME; do
		OUT=$("$YTVIEWER" --sv --author="$NAME" $SEARCH_QUERY --results=2 --no-interactive 2>/dev/null | grep -v '^#') || continue
		[[ -n "$OUT" ]] && RESULTS+=$'\n'"ğŸ“º $NAME ($ID)"$'\n'"$OUT"
	done <"$CONFIG"
fi

#â”€â”€ Interactive result selection â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
SELECTED_VIDEO=$(echo "$RESULTS" | fzf --ansi --no-sort --prompt="ğŸ¬ Pick a video: " --preview='echo {}' --preview-window=down:3:wrap) || {
	echo "âŒ No video selected."
	exit 3
}

VIDEO_ID=$(awk '{print $NF}' <<<"$SELECTED_VIDEO")
VIDEO_URL="https://www.youtube.com/watch?v=$VIDEO_ID"

#â”€â”€ Action prompt: play or download â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
ACTION=$(printf "â–¶ Play in MPV\nğŸ’¾ Download with ytdlc\n" | fzf --prompt="ğŸš€ Action: ") || {
	echo "âŒ No action selected."
	exit 4
}

case "$ACTION" in
"â–¶ Play in MPV")
	echo -e "\nğŸ§ Playing: $VIDEO_URL"
	exec mpv "$VIDEO_URL"
	;;
"ğŸ’¾ Download with ytdlc")
	echo -e "\nğŸ’¾ Launching ytdlc: $VIDEO_URL"
	exec "$YTDLC" -l "$VIDEO_URL"
	;;
esac
