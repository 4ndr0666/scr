# =========================================== // CHEATSHEETS //
cht() {
    local cheats=("$HOME/.cheater/"*.md)
    local choice=$(printf "%s\n" "${cheats[@]}" | fzf --prompt="Select a cheat sheet: ")
    [ -n "$choice" ] && bat --language=markdown "$choice" || echo "No cheat sheet selected."
}

# ============================================== // CONFIG EDITOR //
edit_config() {
    local file_path=$1
    if [[ $file_path ]]; then
        nvim "$file_path"
    else
        echo "File path not provided."
    fi
}

